    loja(&j, &qpokebola, &qpocao, &qrevive);
    */
    //um negocinho desse faz o coisa todo
    
    printf("Escolha um item da Lootbox:\n");
    atu=imprimelistalootbox(atu, &qpokebola, &qpocao, &qrevive);
    loja(&j, &qpokebola, &qpocao, &qrevive);
    
    printf("Escolha um item da Lootbox:\n");
    atu=imprimelistalootbox(atu, &qpokebola, &qpocao, &qrevive);
    loja(&j, &qpokebola, &qpocao, &qrevive);
    
    printf("Escolha um item da Lootbox:\n");
    atu=imprimelistalootbox(atu, &qpokebola, &qpocao, &qrevive);
    loja(&j, &qpokebola, &qpocao, &qrevive);
    
    printf("%d pokbolas, %d poções, %d revives", qpokebola, qpocao, qrevive);
    
