#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include "listase.h"
#include "listad.h"

typedef struct {
    int dinheiros;
} Jogador;
//acho q n precisa, na real


void loja(Jogador *j, int *qpokebola, int *qpocao, int *qrevive) {
    int opcao;
    printf("Bem-vindo à loja! Você tem %d dinheiros.\n", j->dinheiros);
    printf("1. Comprar poção (300 dinheiros)\n");
    printf("2. Comprar pokébola (300 dinheiros)\n");
    printf("3. Comprar revive (500 dinheiros)\n");
    printf("4. Sair da loja\n");

    scanf("%d", &opcao);

    switch(opcao) {
        case 1:
            if (j->dinheiros >= 300) {
                j->dinheiros -= 300;
                printf("Você comprou uma poção!\n");
                (*qpocao)++;
            } else {
                printf("Moedas insuficientes!\n");
            }
            break;
        case 2:
            if (j->dinheiros >= 300) {
                j->dinheiros -= 300;
                printf("Você comprou uma pokébola!\n");
                (*qpokebola)++;
            } else {
                printf("Moedas insuficientes!\n");
            }
            break;
        case 3:
            if (j->dinheiros >= 500) {
                j->dinheiros -= 500;
                printf("Você comprou um revive!\n");
                (*qrevive)++;
            } else {
                printf("Moedas insuficientes!\n");
            }
            break;
        case 4:
            printf("Saindo da loja\n");
            break;
        default:
            printf("Opção inválida!\n");
    }
}

void crialistaloja(tp_listad **l) {
    *l = inicializa_listad();
    char pocao[10] = "pocao";
    char pokebola[10] = "pokebola";
    char revive[10] = "revive";
    
    insere_listad_no_fim(*l, revive);
    insere_listad_no_fim(*l, pocao);
    insere_listad_no_fim(*l, pokebola);

    (*l)->fim->prox = (*l)->ini;
    (*l)->ini->ant = (*l)->fim;
    //imprime_listad(*l, 1);
    //a lista tá certa
}

tp_listad * imprimelistalootbox(tp_listad *atu, int *qpokebola, int *qpocao, int *qrevive) {
    int item;
    char * item_lootbox;
    //printf("Entrou na função");
    //printf("1 %s\n", atu->ini->info);
    
    for (int i = 0; i < 2; i++) { 
        atu->ini = atu->ini->prox;
        printf("%d. %s\n",i+1, atu->ini->info/*tá dando lixo*/);
    }
    scanf("%d", &item);
    if(item==2){
        item_lootbox = atu->ini->info;
        printf("Você adquiriu um(a) %s!\n", item_lootbox);
        
        if (strcmp(atu->ini->info, "pocao") == 0){
            (*qpocao)++;
        }
        else if (strcmp(atu->ini->info, "pokebola") == 0){
            (*qpokebola)++;
        }
        else if (strcmp(atu->ini->info, "revive") == 0){ 
            (*qrevive)++;
        }
    }
    else if(item==1){
        item_lootbox = atu->ini->ant->info;
        printf("Você adquiriu um(a) %s!\n", item_lootbox);
        
        if (strcmp(atu->ini->ant->info, "poção") == 0){
            (*qpocao)++;
        }
        else if (strcmp(atu->ini->ant->info, "pokebola") == 0){
            (*qpokebola)++;
        }
        else if (strcmp(atu->ini->ant->info, "revive") == 0){ 
            (*qrevive)++;
        }
    }
    return atu;
    
    
}

